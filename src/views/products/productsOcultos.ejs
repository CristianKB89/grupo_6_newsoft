<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Products</title>
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap" rel="stylesheet" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link
            href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
            rel="stylesheet">
        <script src="https://kit.fontawesome.com/fcf9db6539.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/normalize.css" />
        <link rel="stylesheet" href="/css/styles-header.css" />
        <link rel="stylesheet" href="/css/styles-footer.css" />
        <link rel="stylesheet" href="/css/styles.css" />
        <link rel="stylesheet" href="/css/styles-products.css" />
        <link rel="shortcut icon" href="/img/logo-solo.png" />
    </head>
    <body>
        <!-- HEADER -->
        <header>
            <%- include('../partials/header') %>
        </header>
        <main>
            <div class="banner">
                <div class="slide-1-oculto">
                    <img class="banner-image" src="/img/bgn-banner-products-1.png" />
                    <div class="des-slide">
                        <h1>K70 RGB PRO</h1>
                        <p>Timeless design meets peerless technology.</p>
                        <button><a href="/products">COMPRAR AHORA</a></button>
                    </div>
                </div>
            </div>
            <div class="container-products">
                <!-- PRODUCTOS OCULTOS -->
                <div class="categoria">
                    <h1>PRODUCTOS OCULTOS</h1>
                </div>
                <% for(let i=0; i<ocultos.length; i++){ %>
                <a href="/products/productdetail/<%= ocultos[i].id_products%>" class="contenedor-ocultos">
                    <section class="product-item-oculto">
                        <div class="imagen-producto">
                            <img src="/img/products/<%= ocultos[i].image %>" alt="imagen de producto">
                        </div>
                        <div class="datos">
                            <p class="nombre">
                                <%= ocultos[i].name %>
                            </p>
                            <p class="descipcion">
                                <%= ocultos[i].description %>
                            </p>
                        </div>
                        <div class="mostrar">
                            <form action="/products/<%=ocultos[i].id_products%>/mostrar?_method=PUT" method="POST" style="display: inline-flex">
                                <button type="submit" class="button"><i class="fa-regular fa-eye"></i>MOSTRAR PRODUCTO</button>
                            </form>
                            <a href="/products/<%=ocultos[i].id_products%>/edit" target="_blank" class="edit">
                                <i class="fas fa-edit"></i>Editar Producto
                            </a>
                            <form action="/products/<%=ocultos[i].id_products%>?_method=DELETE" method="POST" style="display: inline-flex">
                                <button type="submit" class="button-delete"><i class="far fa-trash-alt"></i>ELIMINAR</button>
                            </form>
                        </div>
                    </section>
                </a>
                <% } %>
            </div>
        </main>
        <!-- FOOTER -->
        <footer>
            <%- include('../partials/footer') %>
        </footer>
    </body>
</html>