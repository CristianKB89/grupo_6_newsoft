<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles-register.css">
  <link rel="stylesheet" href="/css/normalize.css" />
  <script src="https://kit.fontawesome.com/8b485465bd.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap" rel="stylesheet" />

  <title>Carrito</title>
</head>

<body>
  <header>
    <div class="main-header">
      <a class="burger-menu" href="#">
        <div>
          <i class="fas fa-bars"></i>
        </div>
      </a>
      <img src="/images/logo-one.png" class="logo" />
      <nav class="main-nav">
        <div>
          <i class="fa-solid fa-square-1"></i>
          <span class="nav-btn-text">Información de contacto</span>
          </a>
          <a href="#">
            <i class="fa-solid fa-square-2"></i>
            <span class="nav-btn-text">Método de pago</span>
          </a>
          <a href="#">
            <i class="fa-solid fa-square-3"></i>
            <span class="nav-btn-text">Método de envio</span>
          </a>

        </div>
      </nav>
      <div class="search-cart">
        <button><i class="fas fa-search"></i></button>
        <button><i class="fas fa-shopping-cart"></i></button>
      </div>
    </div>
  </header>

  <!----Envió-->
  <section class="checkout">

    <h2 class="section-heading">Dirección entrega</h2>
    <form>
      <div class="form-group col-md-6">
        <label class="font-weight-bold">Contacto<span class="text-danger">*</span></label>
        <input type="text" class="form-control" placeholder="contacto">
      </div>
      <div class="form-row mb-2">
        <div class="form-group col-md-6">
          <label class="font-weight-bold">País<span class="text-danger">*</span></label>
          <input type="text" class="form-control" placeholder="País">
        </div>
        <div class="form-group col-md-6">
          <label class="font-weight-bold">Departamento, ciudad, región<span class="text-danger">*</span></label>
          <input type="text" class="form-control" placeholder="Departamento, ciudad, región">
        </div>
        <div class="form-row mb-2">
          <div class="form-group col-md-6">
            <label class="font-weight-bold">Descripción (Manzana, conjunto, casa (opcional)<span
                class="text-danger">*</span></label>
            <input type="text" class="form-control" placeholder="(Manzana, conjunto, casa (opcional)">
          </div>

          <h2 class="section-heading">Medio de envió</h2>
          <div class="form-group col-md-6">
            <label class="font-weight-bold">Retiro en punto aliado Corsair<span class="text-danger">*</span></label>
            <input type="text" class="form-control" placeholder="Retiro en punto aliado Corsair ">
          </div>
        </div>
        <div class="form-group mb-3">
          <label class="font-weight-bold">Envío estándar<span class="text-danger">*</span></label>
          <input type="email" class="form-control" placeholder="Envío estándar">
        </div>
        <div class="form-group mb-3">
          <label class="font-weight-bold">Envío día siguiente <span class="text-danger">*</span></label>
          <input type="password" class="form-control" placeholder="Envío día siguiente">
        </div>

        <button class="btn btn-primary width-100">Continuar a pagar</button>
    </form>

    <section class="cart">

      <div class="cart-item-box">

        <h2 class="section-heading">Revise su carro</h2>

        <div class="product-card">

          <div class="card">

            <div class="img-box">
              <img src="/images/teclado.png" alt="teclado" width="80px" class="product-img">
            </div>

            <div class="detail">

              <h4 class="product-name">TECLADOS ESTÁNDAR PARA JUEGOS</h4>

              <div class="compra">

                <div class="product-qty">
                  <button id="decrement">
                    <i class="fa-solid fa-minus"></i>
                  </button>

                  <span id="quantity">1</span>

                  <button id="increment">
                    <i class="fa-solid fa-plus"></i>
                  </button>
                </div>

                <div class="price">
                  $ <span id="price">450.000 COP</span>
                </div>

              </div>

            </div>

            <button class="product-close-btn">
              <ion-icon name="close-outline"></ion-icon>
            </button>

          </div>

        </div>

        <div class="product-card">

          <div class="card">

            <div class="img-box">
              <img src="/images/chasis.png" alt="chasis" width="80px" class="product">
            </div>

            <div class="detail">

              <h4 class="product-name">
                Chasis ATX semitorre iCUE 4000D RGB AIRFLOW QL Edition — True White</h4>

              <div class="Compra">

                <div class="product-qty">
                  <button id="decrement">
                    <i class="fa-solid fa-minus"></i>
                  </button>

                  <span id="quantity">1</span>

                  <button id="increment">
                    <i class="fa-solid fa-plus"></i>
                  </button>
                </div>

                <div class="price">
                  $ <span id="price">600.000 COP</span>
                </div>

              </div>

            </div>

            <button class="product-close-btn">
              <ion-icon name="close-outline"></ion-icon>
            </button>

          </div>

        </div>

      </div>


      <div class="amount">

        <div class="subtotal">
          <span>Subtotal</span> <span>$ <span id="subtotal">0.00</span></span>
        </div>

        <div class="descuento">
          <span>Descuento estimado</span> <span>$ <span id="tax">0.00</span></span>
        </div>

        <div class="envio">
          <span>Envio</span> <span>$ <span id="shipping">0.00</span></span>
        </div>

        <div class="impuesto">
          <span>Impuesto</span> <span>$ <span id="total">0.00</span></span>
        </div>

      </div>

      </div>

    </section>

    </main>
</body>

</html>